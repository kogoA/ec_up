<!DOCTYPE html>
<html>
  <head>
    <title>park gallery</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag('favicon.ico') %>
    <link href="https://fonts.googleapis.com/css?family=Alegreya+Sans+SC|Armata|Fira+Code&display=swap" rel="stylesheet">
  </head>
  <body>
      <nav>
    <div class="nav-wrapper">
    <img src="/logo05.png" alt="Liruu design" width="45" height="auto" hspace="15" vspace="11"/>
    <a href="/" class="brand-logo">park gallery</a>
      <ul class="right hide-on-med-and-down" id="nav-mobile">
        <% if current_user.present? %>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
        <% end %>
        </ul>
    </div>
  </nav>
    <p class="notice"><%= notice %></p>
    <%= yield %>
    <br>
    <br>
    <%= render 'layouts/user_footer' %>
  </body>
</html>
